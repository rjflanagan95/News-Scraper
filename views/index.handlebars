<div id="home">
  <div class="container" id="wrapper">
    <div class="jumbotron">
      <h1>NY Times Politics Scraper</h1>

      <a href="/scrape"><button class="btn btn-primary" id="scrape-new">Scrape New Articles</button></a>

      <a href="/clear"><button class="btn btn-danger" id="clear-articles">Clear All Articles</button></a>
    </div>

    <div class="row">
      <div class="col-lg-12" id="articles">
        {{#each articles}}
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-8">
                <div class="card-title">
                  <a href={{this.link}}>
                    <h2>
                      {{this.headline}}
                    </h2>
                  </a>
                </div>
                {{!-- add logic for if author exists --}}
                {{#if this.author}}
                <h5>{{this.author}}</h5>
                {{/if}}
                <p>
                  {{this.description}}
                </p>
              </div>
              <div class="col-lg-4">
                {{#if this.imageURL}}
                <img src={{this.imageURL}} style="width:315px;height:210px"/>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        <br>
        {{/each}}

      </div>
    </div>
  </div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/app.js"></script>